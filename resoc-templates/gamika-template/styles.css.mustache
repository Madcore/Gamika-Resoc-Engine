@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

.wrapper {
  background-color: grey;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  color: {{ textColor }};
  position: relative;
}

.side {
  flex: 1;

  background-color: #f9f9f9d0;
  padding: 1.5vw;

  display: flex;
  flex-direction: row;
  gap: 12vh;
    order: 1;
    margin-top: -290px;
    z-index: 1000;
    position: absolute;
    bottom: 0;
    width: 100vw;
    border-top: 5px solid #b22d00;
    backdrop-filter: blur(10px);
    box-shadow: 0 0  100px 0px rgb(0,0,0);


}

.side-content {
  flex: 2 1;
}

#title {
  margin-top: 0;
  font-size: 0.01rem; /* Rely on textFit to find the right size */
  font-family: Roboto;
  height: 100%;
}

.footer {
  flex: 0 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 2vw;
}

.logo {
  width: 40vh;
  height: 9vh;
  filter: drop-shadow(0 0 5px white);
}

.brand-name {
  margin: 0;
  font-size: 9vh;
  font-family: Roboto;
}

.main {
  flex: 1.62; /* Gold proportions */
  position: relative;
  flex-order: 1;
}

.main-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}